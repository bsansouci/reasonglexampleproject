{
  "name": "reglexampleproject",
  "version": "0.1.0",
  "description": "Simple example project for regl",
  "scripts": {
    "start": "_build/src/app.out",
    "build": "eval $(dependencyEnv) && nopam && rebel -show-actions-run-verbose -verbose -show-error-dependency-paths -brief-error-summary -show-buildable-discovery && webpack _build/web/src/index.js _build/web/src/app.js",
    "top": "eval $(dependencyEnv) && rtop",
    "env": "eval $(dependencyEnv) && env",
    "ocamldep": "eval $(dependencyEnv) && ocamldep",
    "editor": "eval $(dependencyEnv) && $EDITOR .",
    "whereisocamlmerlin": "eval $(dependencyEnv) && which ocamlmerlin-reason",
    "mlre": "pbpaste | ./node_modules/reason/refmt_impl.native -parse ml -print re -use-stdin true -is-interface-pp false",
    "reml": "pbpaste | ./node_modules/reason/refmt_impl.native -parse re -print ml -use-stdin true -is-interface-pp false",
    "bla": "eval $(dependencyEnv) && nopam && ocamlfind ocamlopt -pp refmt -bin-annot -g -w -30 -w -40 -open Native_Tar -I _build/native/src -package tgls.tgl3,tsdl  -I _build/native/reglinterface -o stuffstuff -c -for-pack Stuffotherstuff -impl src/index.re",
    "bla2": "eval $(dependencyEnv) && nopam && GL_BACKEND=web ocamlfind ocamldep -pp refmt -ppx ../matchenv/_build/native/src/app.native -ml-synonym .re -mli-synonym .rei -modules -one-line -impl src/gl.re",
    "bla3": "eval $(dependencyEnv) && nopam && GL_BACKEND=native ocamlfind ocamlopt -pp refmt -bin-annot -g -w -30 -w -40 -open Native_Tar -I _build/native/src -ppx ../matchenv/_build/native/src/app.native -package tgls.tgl3,tsdl -I _build/native/reglinterface -I _build/native/reglnative   -o _build/native/src/Native_Tar__Gl -c -impl src/gl.re"
  },
  "dependencies": {
    "@opam-alpha/merlin": "^ 2.5.0",
    "dependency-env": "https://github.com/npm-ml/dependency-env.git",
    "nopam": "https://github.com/yunxing/nopam.git",
    "reason": "https://github.com/facebook/reason.git",
    "rebel": "https://github.com/bsansouci/jengaboot.git#add-env-vars",
    "reglinterface": "*",
    "reglnative": "*",
    "reglweb": "*",
    "matchenv": "https://github.com/bsansouci/matchenv.git"
  },
  "rebel": {
    "targets": [
      {
        "target": "web",
        "engine": "bucklescript",
        "entry": "src/index.re",
        "unstable_flags": {
          "compile": "-ppx node_modules/matchenv/ppx_matchenv.exe -I _build/web/reglweb",
          "link": "-I _build/web/reglweb",
          "envvars": "GL_BACKEND=web",
          "dep": "-ppx node_modules/matchenv/ppx_matchenv.exe"
        }
      },
      {
        "target": "native",
        "engine": "native",
        "entry": "src/index.re",
        "unstable_flags": {
          "compile": "-ppx node_modules/matchenv/ppx_matchenv.exe -package tgls.tgl3,tsdl -I _build/native/reglnative",
          "link": "-linkpkg -package tgls.tgl3,tsdl -I _build/native/reglnative",
          "envvars": "GL_BACKEND=native",
          "dep": "-ppx node_modules/matchenv/ppx_matchenv.exe"
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bsansouci/ocaml-re.git"
  },
  "author": "bsansouci & schmavery",
  "devDependencies": {
    "webpack": "^1.14.0"
  }
}
